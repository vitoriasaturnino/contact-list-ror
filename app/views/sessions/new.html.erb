<div class="row">
  <div class="col-xs-12">
    <h1> Log in </h1>
  </div>
    <div class="col-md-6col-md-offset-3col-xs-12">
      <%= form_for :session, url: log_in_path, method: :post do |f| %>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, placeholder:'Password', class: 'form-control' %>
        </div>

        <%= f.submit 'Entrar', class: 'btn btn-primary' %>

      <%end%>
  </div>
</div>